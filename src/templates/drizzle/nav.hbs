{{!-- Nav item partial --}}
{{#*inline "nav-item"}}
  <a class="mds-nav-link" href="{{@root.baseurl}}/{{url}}">
    {{label}}
  </a>
{{/inline}}

<nav class="mds-nav" id="nav">
  <header class="mds-nav-header">
    <a href="https://www.mozilla.org">
      <img class="mds-nav-mozlogo" src="{{@root.baseurl}}/static/img/mozilla-wordmark-white.svg" width="100" alt="Mozilla">
    </a>

    <a class="nav-toggle" href="#nav">Menu</a>
  </header>

  <div class="mds-nav-menu" id="nav-menu">
    {{!-- Top-level pages --}}
    <ul>
      {{#each (pages sortby="order")}}
        <li class="mds-nav-item">
          {{> nav-item label=data.name}}
        </li>
      {{/each}}
    </ul>

    {{!-- General Styles --}}
    <h4>Styles</h4>
    <ul>
      {{#each (pages "styles" sortby="order")}}
        <li class="mds-nav-item">
          {{> nav-item label=data.name}}
        </li>
      {{/each}}
    </ul>

    {{!-- Atom Patterns --}}
    <h4>Atoms</h4>
    <ul>
      {{#each (collections "atoms" sortby="order")}}
        <li class="mds-nav-item">
          {{> nav-item label=name}}
        </li>
      {{/each}}
    </ul>

    {{!-- Molecule Patterns --}}
    <h4>Molecules</h4>
    <ul>
      {{#each (collections "molecules" sortby="order")}}
        <li class="mds-nav-item">
          {{> nav-item label=name}}
        </li>
      {{/each}}
    </ul>

    {{!-- Organism Patterns --}}
    <h4>Organisms</h4>
    <ul>
      {{#each (collections "organisms" sortby="order")}}
        <li class="mds-nav-item">
          {{> nav-item label=name}}
        </li>
      {{/each}}
    </ul>

    {{!-- Other pages --}}
    <h4>Other Stuff</h4>
    <ul>
      <li class="mds-nav-item">
        {{#with (page "docs/index")}}
          {{> nav-item label=data.title}}
        {{/with}}
      </li>
      <li class="mds-nav-item">
        {{#with (page "demos/index")}}
          {{> nav-item label=data.title}}
        {{/with}}
      </li>
    </ul>
  </div>
</nav>
