<figure>
  <svg class="mds-swatch-image" width="100px" height="100px">
    <rect fill="{{ hex }}" width="100%" height="100%" stroke="#000" stroke-opacity=".1" stroke-width="3" rx="5" ry="5"/>
  </svg>
  <figcaption>
    <h4 class="mds-swatch-name">{{color}}</h4>
    <ul>
      <li><code class="language-css">{{hex}}</code></li>
      <li><code class="language-css">{{rgb}}</code></li>
      {{#if token}}<li><code class="language-scss">{{token}}</code></li>{{/if}}
    </ul>
  </figcaption>
</figure>
